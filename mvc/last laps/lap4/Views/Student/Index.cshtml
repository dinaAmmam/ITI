@model IEnumerable<Student>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<html>
    <head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />


    </head>
    <body>
        <a asp-action="create" asp-controller="student" class="btn btn-primary">Create</a>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th> Id </th>
                    <th> Name </th>
                    <th> Age </th>
                    <th> Email </th>
                    <th>Image</th>
                    <th>Department</th>
                    <th> Operations </th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Count() == 0)
            {
                <tr class="text-danger">
                    <td>No Students Exists</td>
                </tr>
            }
            else
            {
                foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Age</td>
                        <td>@item.Email</td>
                        <td>@item.Image</td>
                        <td>@item.Department.DeptName</td>
                        <td>
                            <a asp-action="Details" asp-controller="Student" asp-route-id="@item.Id">Details</a>
                            | <a asp-action="Edit" asp-controller="Student" asp-route-id="@item.Id">Edit</a>
                            | <button onclick="fun1(@item.Id)"> Details </button>

                        </td>
                    </tr>
                }
            }
        </tbody>
        </table>
        <div id="div1">

        </div>
        <script src="/lib/jquery/dist/jquery.js"></script>
        <script>
            function fun1(i) {
                $("#div1").load("/student/Details2/" + i)
            }
        </script>
   
    </body>
</html>